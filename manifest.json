{
  "manifest_version": 3,
  "name": "Gatorlator",
  "version": "1.0.0",
  "description": "Real-time speech-to-speech translation - AI-powered live translation for lectures and videos",
  "icons": {
    "16": "gatorlator.png",
    "48": "gatorlator.png",
    "128": "gatorlator.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabCapture",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://api.elevenlabs.io/*",
    "https://api.openai.com/*",
    "https://speaches.ai/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "gatorlator.png",
      "48": "gatorlator.png",
      "128": "gatorlator.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
