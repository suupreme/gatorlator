{
  "manifest_version": 3,
  "name": "Gatorlator",
  "version": "2.0",
  "description": "Real-time speech-to-speech translation - AI-powered live translation for lectures and videos",
  "icons": {
    "16": "gatorlator.png",
    "48": "gatorlator.png",
    "128": "gatorlator.png"
  },
  "permissions": ["activeTab", "storage", "tabCapture", "tabs", "offscreen"],
  "host_permissions": [
    "https://api-free.deepl.com/*",
    "https://api.elevenlabs.io/*",
    "https://api.elevenlabs.io/v1/text-to-speech/*",
    "wss://api.deepgram.com/v1/listen?model=nova-2&smart_format=true"
  ],
  "background": {
    "service_worker": "./scripts/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "gatorlator.png",
      "48": "gatorlator.png",
      "128": "gatorlator.png"
    }
  }
}
