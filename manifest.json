{
  "manifest_version": 3,
  "name": "Gatorlater",
  "version": "1.0.0",
  "description": "Real-time speech-to-speech translation - AI-powered live translation for lectures and videos",
  "permissions": [
    "activeTab",
    "storage",
    "tabCapture",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://speaches.ai/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}